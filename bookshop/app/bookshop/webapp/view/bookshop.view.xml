<mvc:View
  controllerName="com.uvs.bookshop.controller.bookshop"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">

  <Page title="{i18n>title}">
    <IconTabBar expandable="false">
      <items>
        <!-- Authors Tab -->
        <IconTabFilter text="Authors" key="authors" icon="sap-icon://person-placeholder">
          <Table items="{/authors}" growing="true">
            <columns>
              <Column>
                <Text text="Author ID" />
              </Column>
              <Column>
                <Text text="Name" />
              </Column>
            </columns>
            <items>
              <ColumnListItem>
                <cells>
                  <Text text="{ID}" />
                  <Text text="{name}" />
                </cells>
              </ColumnListItem>
            </items>
          </Table>
        </IconTabFilter>

        <!-- Books Tab -->
        <IconTabFilter text="Books" key="books" icon="sap-icon://education">
          <Table items="{/books}" growing="true">
            <columns>
              <Column>
                <Text text="Book ID" />
              </Column>
              <Column>
                <Text text="Title" />
              </Column>
            </columns>
            <items>
              <ColumnListItem>
                <cells>
                  <Text text="{ID}" />
                  <Text text="{title}" />
                </cells>
              </ColumnListItem>
            </items>
          </Table>
        </IconTabFilter>
      </items>
    </IconTabBar>
  </Page>
</mvc:View>
